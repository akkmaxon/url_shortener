<%= form_for(@url) do |f| %>
  <%= f.label :original, 'Original url' %> 
  <%= f.text_field :original %>
  <%= f.label :short, 'Short url(optional)' %>
  <%= f.text_field :short %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit 'Submit' %>
<% end %>

<% if session[:urls] %>
  <h2>Your last urls:</h2>
  <ul>
  <%= session[:urls].each do |original, short| %>
    <li><%= link_to short, url_path(short), class: 'url' %> (<%= original %>)</li>
  <% end %>
  </ul>
<% end %>

