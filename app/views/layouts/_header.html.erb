<header class='container'>
  <nav class='row'>
    <ul class='nav nav-tabs'>
      <% if user_signed_in? %>

	<li style='padding: 10px 15px'>Signed in as <%= current_user.email %></li>
	<li class='<%= controller.action_name == 'new' ? "active" : "" %>'>
	  <%= link_to 'New', new_url_path %>
	</li>
	<li class='<%= controller.action_name == 'index' ? "active" : "" %>'>
	  <%= link_to 'View all urls', urls_path %>
	</li>
	<li style='float: right'><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>

      <% else %>

	<li class='<%= controller_name == 'registrations' ? "active" : "" %>'>
	  <%= link_to 'Sign up', new_user_registration_path %>
	</li>
	<li class='<%= controller_name == 'sessions' ? "active" : "" %>'>
	  <%= link_to 'Log in', new_user_session_path %>
	</li>
	<% unless controller_name == 'urls' %>
	  <li><%= link_to 'Create New Url', new_url_path %></li>
	<% end %>

      <% end %>
      <li style='margin: 3px'>
	<%= form_tag search_results_path, method: :get do %>
	  <div class="input-group">
	    <%= text_field_tag :search_keywords, '', class: 'form-control' %>
	    <span class="input-group-btn">
	      <button type="button" id="search_menu" class="btn btn-default glyphicon glyphicon-search dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span class="caret"></span></button>
	      <ul class="dropdown-menu dropdown-menu-right">
		<li><%= submit_tag 'Original URL', class: 'btn btn-link' %></li>
		<li><%= submit_tag 'Short URL', class: 'btn btn-link' %></li>
		<li><%= submit_tag 'Description', class: 'btn btn-link' %></li>
	      </ul>
	    </span>
	  </div>
	<% end %>
      </li>
    </ul>
  </nav>
</header>
